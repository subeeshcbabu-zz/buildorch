{
	"init" : {
		"clean"	: [
			"path:build.log"
		],
		"script" : ""
	},

	"build" : {
		"preclean" : [
		],
		"files" : [

		],
		"prescript" : "",
		"execbuild" : {
			"command" : "npm install"
		},
		"postscript" : "",
		"postclean"	: [
			
		]
	},

	"bake" : {
		"preclean" : [
		],
		"files" : [

		],
		"prescript" : "",
		"command" : "path:node_modules/.bin/grunt",
		"gruntcli" : "grunt-cli@~0.1.11", 
		"execbake" : {
			"lint" : {
				"task" : "lint",
				"skip" : "env:SKIP_LINT|b",
				"failonerror" : true
			},
			"unittest" : {
				"task" : "test",
				"skip" : "env:SKIP_TEST|b",
				"failonerror" : true
			},
			"coverage" : {
				"task" : "coverage",
				"skip" : "env:SKIP_COVERAGE|b",
				"failonerror" : true
			}
		},
		"postscript" : "",
		"postclean"	: [
			
		]
	},

	"bundle" : {
		"preclean" : [
		],	
 		"files" : [

		],	
		"prescript" : "",
		"execbundle" : {
			"target" : "path:target",
			"format" : "tgz",
			"ignorefile" : [
				"path:.packageignore"
			]
		},
		"postscript" : "",
		"postclean"	: [
			
		]
	},
	"metrics" : {
		
		"write" : {
			"outfile" : "path:build-metrics.json"
		}
	}
}
